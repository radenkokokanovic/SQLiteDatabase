<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#dcdfe5"
    tools:context="com.example.radenko.sqlitedatabase.NeuspjelaDostava">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ef0000"
        android:minHeight="?attr/actionBarSize"

        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="26dp" />

    <EditText
        android:id="@+id/txt_Sifra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Å  I F R A"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="104dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:text="Razlog neuspjele dostave"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="134dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/txt_opis"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="158dp" />

    <EditText
        android:id="@+id/txt_opis"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_above="@+id/btn_Prihvati"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="57dp"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/btn_Prihvati"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="Nazad"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/btn_Insert"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_Prihvati"
        android:layout_centerHorizontal="true"
        android:text="Unesi Podatke"
        android:textAllCaps="false"
        android:textSize="18sp" />

</RelativeLayout>
